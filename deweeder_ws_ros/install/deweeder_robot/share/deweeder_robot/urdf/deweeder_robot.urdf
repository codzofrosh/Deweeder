<?xml version="1.0"?>
<robot name="tracked_deweeder">

  <!-- Material Definitions -->
  <material name="green">
    <color rgba="0.2 0.6 0.2 1"/>
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1"/>
  </material>
  <material name="gray">
    <color rgba="0.5 0.5 0.5 1"/>
  </material>
  <material name="red">
    <color rgba="0.8 0.0 0.0 1"/>
  </material>
  <material name="yellow">
    <color rgba="0.8 0.8 0.0 1"/>
  </material>

  <!-- Main Chassis (lower and wider) -->
  <link name="base_chassis">
    <visual>
      <geometry>
        <box size="0.5 0.3 0.15"/>  <!-- Wider for stability -->
      </geometry>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.3 0.15"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="8.0"/>
      <inertia ixx="0.2" ixy="0.0" ixz="0.0" iyy="0.15" iyz="0.0" izz="0.1"/>
    </inertial>
  </link>

  <!-- Left Track -->
  <link name="left_track">
    <visual>
      <geometry>
        <box size="0.6 0.08 0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="left_track_joint" type="fixed">
    <parent link="base_chassis"/>
    <child link="left_track"/>
    <origin xyz="0 0.2 0" rpy="0 0 0"/>
  </joint>

  <!-- Right Track -->
  <link name="right_track">
    <visual>
      <geometry>
        <box size="0.6 0.08 0.1"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="right_track_joint" type="fixed">
    <parent link="base_chassis"/>
    <child link="right_track"/>
    <origin xyz="0 -0.2 0" rpy="0 0 0"/>
  </joint>

  <!-- Camera -->
  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.03"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_chassis"/>
    <child link="camera_link"/>
    <origin xyz="0.2 0 0.1" rpy="0 0 0"/>
  </joint>

  <!-- Arm Base -->
  <link name="arm_base_link">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.04"/>
      </geometry>
      <material name="gray"/>
    </visual>
  </link>

  <joint name="arm_base_joint" type="fixed">
    <parent link="base_chassis"/>
    <child link="arm_base_link"/>
    <origin xyz="0.1 0 0.1" rpy="0 0 0"/>
  </joint>

  <!-- Shoulder -->
  <link name="shoulder_link">
    <visual>
      <geometry>
        <box size="0.15 0.03 0.03"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="shoulder_joint" type="revolute">
    <parent link="arm_base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0.05 0 0.025" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="10.0" velocity="1.0"/>
  </joint>

  <!-- Elbow -->
  <link name="elbow_link">
    <visual>
      <geometry>
        <box size="0.12 0.025 0.025"/>
      </geometry>
      <material name="red"/>
    </visual>
  </link>

  <joint name="elbow_joint" type="revolute">
    <parent link="shoulder_link"/>
    <child link="elbow_link"/>
    <origin xyz="0.1 0 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="0" upper="2.0" effort="5.0" velocity="1.0"/>
  </joint>

  <!-- End Effector -->
  <link name="end_effector_link">
    <visual>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <material name="yellow"/>
    </visual>
  </link>

  <joint name="end_effector_joint" type="fixed">
    <parent link="elbow_link"/>
    <child link="end_effector_link"/>
    <origin xyz="0.08 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Gazebo Plugins -->
  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <parameters>$(find deweeder_robot)/config/controllers.yaml</parameters>
    </plugin>
  </gazebo>

  <!-- Camera Plugin -->
  <gazebo reference="camera_link">
    <sensor type="camera" name="camera_sensor">
      <camera name="camera">
        <horizontal_fov>1.57</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
          <format>R8G8B8</format>
        </image>
      </camera>
      <plugin filename="libgazebo_ros_camera.so" name="camera_plugin">
        <ros>
          <namespace>/deweeder</namespace>
          <remapping>image_raw:=camera/image_raw</remapping>
        </ros>
        <camera_name>camera</camera_name>
        <frame_name>camera_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Front Tiller (plough-like implement) -->
  <link name="tiller_link">
    <visual>
      <geometry>
        <box size="0.35 0.08 0.02"/>
      </geometry>
      <material name="black"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.35 0.08 0.02"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <inertia ixx="0.02" ixy="0.0" ixz="0.0" iyy="0.02" iyz="0.0" izz="0.01"/>
    </inertial>
  </link>

  <joint name="tiller_joint" type="fixed">
    <parent link="base_chassis"/>
    <child link="tiller_link"/>
    <origin xyz="0.28 0 0.02" rpy="0.2 0 0"/>
  </joint>

</robot>
